{
  "name": "mockingboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/shared",
    "packages/bot"
  ],
  "scripts": {
    "dev:bot": "npm run dev -w packages/bot",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "npm run build --workspaces --if-present",
    "verify": "npm run lint && npm run test && npm run format:check",
    "clean_artifacts": "rm -rf packages/**/dist packages/**/node_modules",
    "clean_code": "eslint . --fix && prettier --write .",
    "clean_install": "npm run clean_artifacts && npm install"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@swc/core": "^1.10.0",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.0",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.20.0"
  },
  "engines": {
    "node": ">=22.12.0"
  }
}
