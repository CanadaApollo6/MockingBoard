rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // Helper Functions
    // ============================================

    // Check if user is authenticated via Firebase Auth
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if authenticated user owns this document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check if user is a participant in a draft
    // Checks both keys (Firestore doc IDs) and values (Discord IDs)
    // to handle bot drafts, legacy web drafts, and new web drafts
    function isDraftParticipant(draftId) {
      let p = get(/databases/$(database)/documents/drafts/$(draftId)).data.participants;
      return isAuthenticated() &&
        (request.auth.uid in p || request.auth.uid in p.values());
    }

    // ============================================
    // Players Collection
    // Public read, admin-only write (seeded data)
    // ============================================
    match /players/{playerId} {
      allow read: if true;
      allow write: if false;
    }

    // ============================================
    // Teams Collection
    // Public read, admin-only write (seeded data)
    // ============================================
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }

    // ============================================
    // Users Collection
    // Authenticated users can read/write their own document
    // ============================================
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated();
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    // ============================================
    // Drafts Collection
    // Public read (for spectating), participants can write
    // ============================================
    match /drafts/{draftId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isDraftParticipant(draftId);
      allow delete: if false;

      // Picks subcollection
      // Public read, admin-only write (via transactions)
      match /picks/{pickId} {
        allow read: if true;
        allow write: if false;
      }
    }

    // ============================================
    // Scout Profiles Collection
    // Public read, admin-only write (seeded data)
    // ============================================
    match /scoutProfiles/{profileId} {
      allow read: if true;
      allow write: if false;
    }

    // ============================================
    // Big Boards Collection
    // Owner read/write, public read for comparison
    // ============================================
    match /bigBoards/{boardId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;

      match /snapshots/{snapshotId} {
        allow read: if true;
        allow create: if isAuthenticated() &&
          get(/databases/$(database)/documents/bigBoards/$(boardId)).data.userId == request.auth.uid;
        allow update, delete: if false;
      }
    }

    // ============================================
    // Follows Collection
    // Public read, authenticated create/delete own
    // ============================================
    match /follows/{followId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
        request.resource.data.followerId == request.auth.uid;
      allow delete: if isAuthenticated() &&
        resource.data.followerId == request.auth.uid;
      allow update: if false;
    }

    // ============================================
    // Notifications Collection
    // Owner read/update, server-only create/delete
    // ============================================
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      allow create, delete: if false;
    }

    // ============================================
    // Trades Collection
    // Only draft participants can read/write
    // ============================================
    match /trades/{tradeId} {
      allow read: if isAuthenticated() &&
        isDraftParticipant(resource.data.draftId);

      allow create: if isAuthenticated();

      allow update: if isAuthenticated() &&
        (resource.data.proposerId == request.auth.uid ||
         resource.data.recipientId == request.auth.uid);

      allow delete: if false;
    }
  }
}
